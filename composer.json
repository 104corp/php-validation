{
    "name": "104corp/validation",
    "description": "A simple validation library.",
    "type": "library",
    "license": "BSD-3-Clause",
    "homepage": "https://github.com/104corp/php-validation",
    "support": {
        "issues": "https://github.com/104corp/php-validation/issues"
    },
    "require": {
        "php": ">=5.5"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 <6",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Corp104\\Validation\\": "src/Validation"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    }
}
